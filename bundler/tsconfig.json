{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noUnusedLocals": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "lib": [
            "es2015"
        ],
        "rootDir": "src/"
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "include": [
        "src/**/*"
    ]
}
